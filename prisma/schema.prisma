generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Role {
  id    Int    @id @default(autoincrement())
  name  String @unique
  users User[]
}

model Base {
  id    Int    @id @default(autoincrement())
  name  String
  users User[]
}

model User {
  id        Int    @id @default(autoincrement())
  username  String @unique
  email     String @unique
  password  String

  roleId    Int
  role      Role   @relation(fields: [roleId], references: [id])

  baseId    Int?
  base      Base?  @relation(fields: [baseId], references: [id])
}
